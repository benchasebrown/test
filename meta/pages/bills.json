{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Bills"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "path": "add-bill",
                        "type": "popup",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  }
                },
                {
                  "events": {
                    "click": [
                      {
                        "condition": "${event?.Value == \"csv\"}",
                        "fileName": "Bills",
                        "name": "sql.getBills",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${grid0.Query.Filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Payee,Category,Status"
                          },
                          {
                            "name": "$select",
                            "value": "bill_id,name,description,Payee.name as Payeename,Category.name as Categoryname,amount,due,Status.name as Statusname"
                          }
                        ],
                        "type": "export"
                      },
                      {
                        "condition": "${event == null || event.Value == \"xlsx\"}",
                        "fileName": "Bills",
                        "format": "xlsx",
                        "name": "sql.getBills",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${grid0.Query.Filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Payee,Category,Status"
                          },
                          {
                            "name": "$select",
                            "value": "bill_id,name,description,Payee.name as Payeename,Category.name as Categoryname,amount,due,Status.name as Statusname"
                          }
                        ],
                        "type": "export"
                      }
                    ]
                  },
                  "icon": "get_app",
                  "items": [
                    {
                      "icon": "",
                      "text": "Excel",
                      "value": "xlsx"
                    },
                    {
                      "icon": "",
                      "text": "CSV",
                      "value": "csv"
                    }
                  ],
                  "name": "splitbutton0",
                  "style": {
                    "marginLeft": "10px",
                    "marginBottom": "10px"
                  },
                  "text": "Export",
                  "type": "splitbutton"
                },
                {
                  "attributes": [
                    {
                      "name": "@oninput",
                      "value": "@(async(args) => {search = $\"{args.Value}\";await grid0.GoToPage(0);await Load();})"
                    }
                  ],
                  "name": "textbox0",
                  "placeholder": "Search ...",
                  "style": {
                    "display": "block",
                    "marginBottom": "10px",
                    "width": "100%"
                  },
                  "type": "textbox",
                  "value": ""
                },
                {
                  "name": "grid0",
                  "allowFiltering": true,
                  "filterMode": "advanced",
                  "allowPaging": true,
                  "allowSorting": true,
                  "data": "${getBillsResult}",
                  "events": {
                    "loadData": [],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "bill_id",
                            "value": "${event.bill_id}"
                          }
                        ],
                        "path": "edit-bill",
                        "type": "popup",
                        "then": [
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "bill_id",
                      "title": "Bill Id"
                    },
                    {
                      "property": "name",
                      "title": "Name"
                    },
                    {
                      "property": "description",
                      "title": "Description"
                    },
                    {
                      "property": "payee_id",
                      "sortProperty": "Payee.name",
                      "groupProperty": "Payee.name",
                      "filterProperty": "Payee.name",
                      "template": "${data.Payee?.name}",
                      "title": "Payee"
                    },
                    {
                      "property": "category_id",
                      "sortProperty": "Category.name",
                      "groupProperty": "Category.name",
                      "filterProperty": "Category.name",
                      "template": "${data.Category?.name}",
                      "title": "Category"
                    },
                    {
                      "property": "amount",
                      "title": "Amount"
                    },
                    {
                      "property": "due",
                      "formatString": "{0:MM/dd/yyyy}",
                      "title": "Due"
                    },
                    {
                      "property": "status_id",
                      "sortProperty": "Status.name",
                      "groupProperty": "Status.name",
                      "filterProperty": "Status.name",
                      "template": "${data.Status?.name}",
                      "title": "Status"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "width": "70px",
                      "textAlign": "center",
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Bill",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "sql.deleteBill",
                                "parameters": [
                                  {
                                    "name": "bill_id",
                                    "value": "${data.bill_id}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "datagrid",
                  "itemType": "PersonalFinance.Models.Sql.Bill",
                  "pageSize": 50
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "condition": "string.IsNullOrEmpty(search)",
        "name": "search",
        "type": "set",
        "value": "\"\"",
        "valueType": "string"
      },
      {
        "name": "sql.getBills",
        "parameters": [
          {
            "name": "$filter",
            "operator": "or",
            "value": [
              {
                "operation": "contains",
                "property": "name",
                "type": "string",
                "value": "\"${search}\""
              },
              {
                "operation": "contains",
                "property": "description",
                "type": "string",
                "value": "\"${search}\""
              }
            ]
          },
          {
            "name": "$expand",
            "value": "Payee,Category,Status"
          }
        ],
        "then": [
          {
            "name": "getBillsResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<PersonalFinance.Models.Sql.Bill>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Bills",
  "layout": "Main"
}