{
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Transactions",
          "type": "heading"
        },
        {
          "columns": [
            {
              "property": "name",
              "title": "Name"
            },
            {
              "formatString": "{0:C}",
              "property": "balance1",
              "title": "Balance"
            }
          ],
          "data": "${getBalancesResult}",
          "itemType": "PersonalFinance.Models.Sql.Balance",
          "name": "datagrid0",
          "type": "datagrid"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "events": {
                    "click": [
                      {
                        "path": "add-transaction",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ],
                        "type": "popup"
                      }
                    ]
                  },
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button"
                },
                {
                  "events": {
                    "click": [
                      {
                        "condition": "${event?.Value == \"csv\"}",
                        "fileName": "Transactions",
                        "name": "sql.getTransactions",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${grid0.Query.Filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Account,Category,Payee,Status"
                          },
                          {
                            "name": "$select",
                            "value": "transaction_id,Account.name as Accountname,date,checkNumber,Category.name as Categoryname,Payee.name as Payeename,description,amount,Status.name as Statusname"
                          }
                        ],
                        "type": "export"
                      },
                      {
                        "condition": "${event == null || event.Value == \"xlsx\"}",
                        "fileName": "Transactions",
                        "format": "xlsx",
                        "name": "sql.getTransactions",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${grid0.Query.Filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Account,Category,Payee,Status"
                          },
                          {
                            "name": "$select",
                            "value": "transaction_id,Account.name as Accountname,date,checkNumber,Category.name as Categoryname,Payee.name as Payeename,description,amount,Status.name as Statusname"
                          }
                        ],
                        "type": "export"
                      }
                    ]
                  },
                  "icon": "get_app",
                  "items": [
                    {
                      "icon": "",
                      "text": "Excel",
                      "value": "xlsx"
                    },
                    {
                      "icon": "",
                      "text": "CSV",
                      "value": "csv"
                    }
                  ],
                  "name": "splitbutton0",
                  "style": {
                    "marginBottom": "10px",
                    "marginLeft": "10px"
                  },
                  "text": "Export",
                  "type": "splitbutton"
                },
                {
                  "attributes": [
                    {
                      "name": "@oninput",
                      "value": "@(async(args) => {search = $\"{args.Value}\";await grid0.GoToPage(0);await Load();})"
                    }
                  ],
                  "name": "textbox0",
                  "placeholder": "Search ...",
                  "style": {
                    "display": "block",
                    "marginBottom": "10px",
                    "width": "100%"
                  },
                  "type": "textbox",
                  "value": ""
                },
                {
                  "allowFiltering": true,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "property": "transaction_id",
                      "title": "Transaction Id",
                      "visible": false
                    },
                    {
                      "filterProperty": "Account.name",
                      "groupProperty": "Account.name",
                      "property": "account_id",
                      "sortProperty": "Account.name",
                      "template": "${data.Account?.name}",
                      "title": "Account",
                      "width": "100px"
                    },
                    {
                      "formatString": "{0:MM/dd/yyyy}",
                      "property": "date",
                      "title": "Date",
                      "width": "100px"
                    },
                    {
                      "property": "checkNumber",
                      "title": "Check Number",
                      "width": "100px"
                    },
                    {
                      "filterProperty": "Category.name",
                      "groupProperty": "Category.name",
                      "property": "category_id",
                      "sortProperty": "Category.name",
                      "template": "${data.Category?.name}",
                      "title": "Category",
                      "width": "250px"
                    },
                    {
                      "filterProperty": "Payee.name",
                      "groupProperty": "Payee.name",
                      "property": "payee_id",
                      "sortProperty": "Payee.name",
                      "template": "${data.Payee?.name}",
                      "title": "Payee",
                      "width": "250px"
                    },
                    {
                      "property": "description",
                      "title": "Description",
                      "width": "400px"
                    },
                    {
                      "formatString": "{0:C}",
                      "property": "amount",
                      "title": "Amount",
                      "width": "100px"
                    },
                    {
                      "filterProperty": "Status.name",
                      "groupProperty": "Status.name",
                      "property": "status_id",
                      "sortProperty": "Status.name",
                      "template": "${data.Status?.name}",
                      "title": "Status",
                      "width": "200px"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Transaction",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "sql.deleteTransaction",
                                "parameters": [
                                  {
                                    "name": "transaction_id",
                                    "value": "${data.transaction_id}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          },
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "size": "sm",
                          "text": "",
                          "type": "button"
                        }
                      ],
                      "textAlign": "center",
                      "width": "70px"
                    }
                  ],
                  "data": "${getTransactionsResult}",
                  "events": {
                    "loadData": [],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "transaction_id",
                            "value": "${event.transaction_id}"
                          }
                        ],
                        "path": "edit-transaction",
                        "then": [
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ],
                        "type": "popup"
                      }
                    ]
                  },
                  "filterMode": "advanced",
                  "itemType": "PersonalFinance.Models.Sql.Transaction",
                  "name": "grid0",
                  "pageSize": 50,
                  "title": "",
                  "type": "datagrid"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "change": [],
    "load": [
      {
        "condition": "string.IsNullOrEmpty(search)",
        "name": "search",
        "type": "set",
        "value": "\"\"",
        "valueType": "string"
      },
      {
        "name": "sql.getTransactions",
        "parameters": [
          {
            "name": "$filter",
            "operator": "or",
            "value": [
              {
                "operation": "contains",
                "property": "description",
                "type": "string",
                "value": "\"${search}\""
              }
            ]
          },
          {
            "name": "$expand",
            "value": "Account,Category,Payee,Status"
          },
          {
            "name": "$orderby",
            "value": [
              {
                "direction": "desc",
                "property": "date"
              }
            ]
          }
        ],
        "then": [
          {
            "name": "getTransactionsResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<PersonalFinance.Models.Sql.Transaction>"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "sql.getBalances",
        "then": [
          {
            "name": "getBalancesResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<PersonalFinance.Models.Sql.Balance>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Transactions"
}